@page "/Welcome"
@using ScoreTracker.Domain.SecondaryPorts
@inject ICurrentUserAccessor _currentUser;

<PageTitle>Welcome</PageTitle>

<MudPaper>
    <MudCard>
        
        <MudCardHeader>
            
            <MudText Typo="Typo.h4">Welcome to Score Tracker, @_currentUser.User.Name!</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1">To get started you can either <MudButton Href="/" StartIcon="@Icons.Material.Filled.Description">Record Scores Manually</MudButton>, <MudButton Href="/UploadXXScores" StartIcon="@Icons.Material.Filled.UploadFile">Upload XX In an Excel Sheet</MudButton>, or <MudButton Href="/UploadPhoenixScores" StartIcon="@Icons.Material.Filled.UploadFile">Migrate Phoenix Scores From PIUGame</MudButton></MudText>
            <br/>
            <MudText Typo="Typo.body1">If you wish to change your username, check out your <MudButton Href="/Account" StartIcon="@Icons.Material.Filled.AccountCircle">Account</MudButton></MudText>
        </MudCardContent>
    </MudCard>
</MudPaper>
