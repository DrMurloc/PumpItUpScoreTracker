@page "/Players"
@using MediatR
@using ScoreTracker.Application.Queries
@using ScoreTracker.Domain.Models
@using ScoreTracker.Domain.SecondaryPorts
<PageTitle>Find Players</PageTitle>

<MudTable Dense="true" Striped="true" ServerData="ServerReload" @ref="_table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Find Players</MudText>
        <MudSpacer />
        <MudTextField 
            T="string"
            Placeholder="Search"
            DebounceInterval="250"
            Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            IconSize="Size.Medium"
            Class="mt-0"
            ValueChanged="Search"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Username</MudTh>
        <MudTh>Chart List</MudTh>
        <MudTh>Progress</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Username">
            <MudTooltip Text="@context.Id.ToString()">
                @context.Name
            </MudTooltip>
        </MudTd>
        <MudTd>
            <MudButton StartIcon="@Icons.Filled.List" Href="@ChartListLink(context.Id)" Color="Color.Primary" Variant="Variant.Text">Charts</MudButton>
        </MudTd>
        <MudTd>
            <MudButton StartIcon="@Icons.Filled.BarChart" Href="@ProgressLink(context.Id)" Color="Color.Primary" Variant="Variant.Text">Progress</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@inject IMediator Mediator
@inject ISnackbar Snackbar;

@code {
    private string _searchText = string.Empty;
    private MudTable<User> _table;

    private async Task<TableData<User>> ServerReload(TableState state)
    {
        var searchResult = await Mediator.Send(new SearchForUsersQuery(_searchText, state.Page+1, state.PageSize));
        return new TableData<User>
        {
            Items = searchResult.Results,
            TotalItems = searchResult.Total
        };
    }

    private string ChartListLink(Guid userId)
        => $"{userId}/Charts";

    private string ProgressLink(Guid userId)
        => $"{userId}/Progress";


    private async Task Search(string searchText)
    {
        _searchText = searchText;
        await _table.ReloadServerData();
    }
    
}
